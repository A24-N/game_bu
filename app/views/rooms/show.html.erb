<div class="container mt-4">
  <div class="row">
    <div class="col-8 offset-1 mt-2">
      <p class="h4"><%= @owner.nickname %>と<%= @member.nickname %>のチャットルーム</p>
    </div>
    <div class="col-3">
      <%= link_to "ルーム解散", room_path(@room), method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>
    <div class="col-11 mt-2">
      <p>ルーム情報</p>
      <p>ルームコメント：<%= @match.room_comment %></p>
      <p>ゲーム名：<%= @match.game_name %></p>

    </div>
  <div class="row">
    <p class="col-12">チャット</p>
    <div class="col-3">
      <%= image_tag @owner.get_image(100,100) %>
    </div>
    <div class="col-6">
      a
    </div>
    <div class="col-3">
      <%= image_tag @member.get_image(100,100) %>
    </div>
  </div>
</div>
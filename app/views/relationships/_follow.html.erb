<div class="container">
  <div class="row">
    <div class="col-11 offset-1">
      <h2 class="heading mt-4"><%= @user.nickname %>さんの<%= follow %>一覧</h2>
    </div>
    <div class="col-xl-3 col-sm-11 side m-2">
      <%= render 'users/info', user: current_user %>
    </div>
    <div class="col-xl-8 col-sm-11">
      <% if users.exists? %>
        <table class="table box">
          <% users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_image(50,50) %></td>
              <td>
                <%= link_to user_path(user) do %>
                  <%= user.nickname %>
                <% end %>
              </td>
              <td>フォロー数：<%= user.followings.count %></td>
              <td>フォロワー数：<%= user.followers.count %></td>
            </tr>
          <% end %>
        </table>
      <% else %>
        <p class="mt-3">ユーザーはまだいません</p>
      <% end %>
      <%= paginate @users %>
    </div>
  </div>
</div>
<div class="container mt-4">
  <div class="row">
    <div class="col-11 offset-1 mt-2">
      <p class="h4">投稿編集ページ</p>

      <%= form_with model: @post do |f| %>
        <div class="field col-6 mt-3">
          <%= f.label :タイトル, class: 'font-weight-bold' %>
          <%= f.text_field :title, autoforcus: true, class: 'form-control' %>
        </div>

        <div class="field col-6 mt-3">
          <%= f.label :投稿内容, class: 'font-weight-bold' %>
          <%= f.text_area :body, class: 'form-control' %>
        </div>

        <div class="field col-6 mt-3">
          <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
          <%= f.text_field :name, value: @tags ,class:"form-control"%>
        </div>

        <div class="action col-6 text-right mt-3">
          <%= f.submit "変更", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<table class="table" style="table-layout:fixed;">
  <thead>
    <tr>
      <th></th>
      <th>投稿者</th>
      <th style="width:200px;">タイトル</th>
      <th>タグ</th>
      <th>いいね</th>
      <th>コメント数</th>
    </tr>
  </thead>
  <% posts.each do |post| %>
    <tr>
      <td><%= image_tag post.user.get_image(80,80) %></td>
      <td><%= post.user.nickname %></td>
      <td>
        <%= link_to post_path(post) do %>
          <%= post.title %>
        <% end %>
      </td>
      <td>
        <% post.tags.each do |tag| %>
          <li class="list-unstyled">
            <%= link_to tag.name, search_path(word: tag.name, range: Tag) %>
          </li>
        <% end %>
      </td>
      <td id="favorite_buttons_<%= post.id %>">
        <%= render 'favorites/favorite_btn', post: post %>
      </td>
      <td><%= post.comments.count %>件</td>
    </tr>
  <% end %>
</table>
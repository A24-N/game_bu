<div class="container">
  <div class="row">
    <div class="col-11 offset-1">
      <h2 class="heading mt-4">いいねした投稿一覧</h2>
    </div>
    <div class="col-xl-3 col-sm-11 side m-2">
      <%= render 'users/info', user: current_user %>
    </div>

    <div class="col-xl-8 col-sm-11">
      <div class="mt-4">
        <% if @posts.blank? %>
          <p class="mt-3">いいねした投稿はまだありません</p>
        <% else %>
          <%= render 'posts/index', posts: @posts %>
          <%= paginate @posts %>
        <% end %>
      </div>
    </div>

  </div>
</div>
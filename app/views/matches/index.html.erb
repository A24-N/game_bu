<div class="container mt-4">
  <div class="row">
    <%= render 'users/info', user: current_user %>

    <div class="col-8">
      <p class="h4">マッチング一覧</p>

      <%= link_to "マッチング待機ボタン", user_status_change_path(current_user), method: :patch %>
      <%= form_with model: @user, url: user_status_change_path(current_user) do |f| %>
        <% if @user.matching_status == "stand_by" %>
          <%= f.hidden_field :matching_status, value: "afk" %>
          <%= f.submit "マッチング待機解除", class: 'btn btn-outline-success' %>
        <% else %>
          <%= f.hidden_field :matching_status, value: "stand_by" %>
          <%= f.text_field :room_comment, placeholder: "コメントをここに" %>
          <%= f.submit "マッチング待機開始", class: 'btn btn-outline-success' %>
        <% end %>
      <% end %>

        <% @user_stand_by.each do |user| %>
        <table class="table">
          <tr>
            <th colspan=2>待機中ユーザー</th>
            <th>ルームコメント</th>

          </tr>
          <tr>
            <td style="width:80px;"><%= image_tag user.get_image(80,80) %></td>
            <td><%= user.nickname %></td>
            <td><%= user.room_comment %></td>
            <td><%= link_to "マッチング", match_matching_path(user_id: user.id), method: :patch, class: 'btn btn-info' %></td>
          </tr>
        </table>
        <% end %>
    </div>
  </div>
</div>
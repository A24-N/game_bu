<div class="container">
  <div class="row">
    <div class="col-11 offset-1">
      <h2 class="heading mt-4">会員情報編集ページ</h2>
    </div>

    <div class="col">
      <%= form_with model: @user do |f| %>
        <div class="field col-6 mt-3">
          <%= f.label :ニックネーム, class: 'font-weight-bold' %>
          <%= f.text_field :nickname, autofocus: true, class: 'form-control' %>
        </div>

        <div class="field col-6 mt-3">
          <%= f.label :メールアドレス, class: 'font-weight-bold' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>

        <div class="field col-6 mt-3">
          <%= f.label :プロフィール画像, class: 'font-weight-bold' %><br>
          <%= f.file_field :image, accept: "image/*"%>
        </div>

        <div class="field col-6 mt-3">
          <%= f.label :自己紹介, class: 'font-weight-bold' %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>

        <div class="field col-6 mt-3">
          <div class="row">
            <div class="col-4">
            <%= f.label :プレイスタイル, class: 'font-weight-bold' %>
            <%= f.select :playstyle, User.playstyles_i18n.invert, {}, class: 'form-control' %>
            </div>
            <div class="col-4 offset-4">
            <%= f.label :活動時間帯, class: 'font-weight-bold' %>
            <%= f.text_field :activetime, class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="action col-6 mt-3">
          <div class="row">
            <div class="col-4">
              <%= link_to "退会", user_unsubscribe_path(current_user), class: 'btn btn-outline-danger btn-sm' %>
            </div>
            <div class="col-4 offset-4 text-right">
              <%= f.submit "更新", class: 'btn btn-outline-success' %>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>

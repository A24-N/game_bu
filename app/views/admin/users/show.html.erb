<div class="container mt-4">
  <div class="row">
    <div class="col-3 offset-1 mt-2">
      <p class="h4"><%= @user.nickname %>の詳細ページ</p>
    </div>
    <div class="col-3">
      <% if @user.is_user_deleted == false  %>
        <p>会員ステータス：<span class="text-success font-weight-bold">可動中</span></p>
      <% elsif %>
        <p>会員ステータス：<span class="text-muted">停止中</span></p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="flex-column">
      <div>
        <%= link_to "会員情報編集", edit_admin_user_path(@user) %>
      </div>
      <div>
        <%= link_to "投稿一覧", admin_posts_path %>
      </div>
      <div>
        <%= link_to "紹介文一覧", admin_introduces_path %>
      </div>
      <div>
        <%= link_to "管理者TOPへ", admin_root_path %>
      </div>
    </div>
  </div>
</div>
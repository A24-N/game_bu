    <% @users.each do |user| %>
      <div class="col-2">
        <%= user.id %>.
        <%= link_to admin_user_path(user) do %>
          <%= user.nickname %>
        <% end %>
      </div>
      <div class="col-2">
        <% if user.is_user_deleted == false  %>
          <p class="text-success font-weight-bold">可動中</p>

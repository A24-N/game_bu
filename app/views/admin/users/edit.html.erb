<div class="container">
  <div class="row">
    <div class="col-11 offset-1">
      <div class="text-center">
        <h2 class="heading mt-4"><%= @user.nickname %>の会員情報編集ページ</h2>
      </div>

      <%= form_with model: @user, url: admin_user_path do |f| %>
        <div class="field col-6 mt-3 mx-auto">
          <%= f.label :ニックネーム, class: 'font-weight-bold' %>
          <%= f.text_field :nickname, autofocus: true, class: 'form-control' %>
        </div>

        <div class="field col-6 mt-3 mx-auto">
          <%= f.label :メールアドレス, class: 'font-weight-bold' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>

        <div class="field col-6 mt-3 mx-auto">
          <%= f.label :自己紹介, class: 'font-weight-bold' %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>

        <div class="field col-6 mt-3 mx-auto">
          <div class="row">
            <div class="col-4">
            <%= f.label :プレイスタイル, class: 'font-weight-bold' %>
            <%= f.select :playstyle, User.playstyles_i18n.invert, {}, class: 'form-control' %>
            </div>
            <div class="col-4 offset-4 mx-auto">
            <%= f.label :活動時間帯, class: 'font-weight-bold' %>
            <%= f.text_field :activetime, class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="field col-6 mt-3 mx-auto">
            <%= f.label :会員ステータス　, class: 'font-weight-bold' %>
            <%= f.radio_button :is_user_deleted, :false %>
            <%= f.label :is_user_deleted, '可動', value: false %>
            <%= f.radio_button :is_user_deleted, :true %>
            <%= f.label :is_user_deleted, '停止', value: true %>
          </div>

        <div class="action col-6 mt-3 mx-auto">
          <div class="row">
            <div class="col-4 offset-4 text-right">
              <%= f.submit "更新", class: 'btn btn-outline-success' %>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
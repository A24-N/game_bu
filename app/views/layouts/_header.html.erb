<header>
  <% if user_signed_in? %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-white">
      <div class="container-fluid border-bottom">
        <% if current_user.role == 1 %>
          <a class="navbar-brand" href="/main"><%= image_tag 'logo_resize.png', size: "150x75" %></a>
          <p class="h4">ようこそ!! <%= current_user.nickname %>さん!!</p>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item"><%= link_to "管理者TOP", admin_root_path, class: 'nav-link text-dark btn btn-outline-secondary mx-2' %></li>
              <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark btn btn-outline-secondary mx-2' %></li>
            </ul>
          </div>
        <% else %>
          <a class="navbar-brand" href="/main"><%= image_tag 'logo_resize.png', size: "150x75" %></a>
          <p class="h4">ようこそ!! <%= current_user.nickname %>さん!!</p>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <%= render 'searches/search_form' %>
              <li><%= link_to "マイページ", user_path(current_user), class: 'nav-link text-dark btn btn-outline-secondary mx-2' %></li>
              <li><%= link_to "投稿一覧", posts_path, class: 'nav-link text-dark btn btn-outline-secondary mx-2' %></li>
              <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark btn btn-outline-secondary mx-2' %></li>
            </ul>
          </div>
        <% end %>
      </div>
    </nav>
  <% end %>
</header>
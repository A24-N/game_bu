<% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word, placeholder: "ユーザー/投稿検索" %>
      <%= f.select :range, options_for_select([['User'],['Post']]) %>
      <%= f.select :search, options_for_select([["部分一致","partial_match"],["完全一致","perfect_match"]]) %>
      <%= button_tag type: :submit, class: "btn btn-outline-primary btn-sm" do %>
        <i class="fas fa-search"></i>
      <% end %>
    <% end %>
  </div>
<% end %>
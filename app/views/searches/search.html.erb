<div class="container mt-4">
  <div class="row">
    <%= render 'users/info', user: current_user %>
    <div class="col-8">
      <p class="h4">"<%= @range %>" "<%= @word %>"の検索結果</p>
      <% if @range == "User" %>
        <%= render 'users/index', users: @users %>
        <% if @users.blank? %>
          <p>検索結果はありません。</p>
        <% end %>
      <% elsif @range == "Post" %>
        <%= render 'posts/index', posts: @posts %>
        <% if @posts.blank? %>
          <p>検索結果はありません。</p>
        <% end %>
      <% elsif @range == "Tag" %>
        <%= render 'posts/index', posts: @posts %>
        <% if @posts.blank? %>
          <p>検索結果はありません。</p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>